
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/DangKi.css" type="text/css">
<script type="text/javascript">
    function check() {
        var checkBox = document.getElementById("ckbNhoMk")
        if (document.getElementById("ckbNhoMk").checked == true) {
            checkBox.value = "yes"
            //alert(checkBox.value)
        } else if (document.getElementById("ckbNhoMk").checked == false) {
            checkBox.value = "no"
            //alert(checkBox.value)
        }
    }
</script>
<div class="main-control">
    <div class="Dang-Nhap-controler">
        <div class="Dang-Nhap-header">
            <h2>Đăng nhập</h2>
        </div>
        <div class="form-DangNhap"> 
            @using (Html.BeginForm("Index", "Login"))
            {
                @Html.AntiForgeryToken()
                <form action="" method="post" class="form-control" style="width:100%;">
                    <div class="row form-DangNhap-row">
                        <span class="col form-input">
                            <label for="">Địa chỉ email *</label>
                            <input class="form-control" name="txtAccount" value="@ViewBag.txtEmail" type="text" placeholder="Nhập email của bạn" required>
                        </span>

                    </div>
                    <div class="row form-DangNhap-row">
                        <span class="col form-input">
                            <label for="">Mật khẩu *</label>
                            <input class="form-control" name="txtPass" value="@ViewBag.txtPass" type="password" placeholder="Nhập mật khẩu của bạn" required>
                        </span>

                    </div>
                    <div class="row form-DangNhap-row">
                        <span class="col form-input">
                            <input class="form-check-input" value="" onclick="check()" id="ckbNhoMk" type="checkbox" name="NhoMk">
                            @*<asp:CheckBox ID="chkRememberMe" class="form-check-input" runat="server" Text ="Nhớ mật khẩu"/>
                           *@ <label for="">Nhớ mật khẩu</label>
                        </span>

                    </div>
                    <button class="btn-Dang-Nhap" name="btnDangNhap" type="submit">Đăng nhập</button>

                </form>
            }
            </div>
    </div>
</div>

